<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1>Add New Comment to <%= location.name.charAt(0).toUpperCase() + location.name.substring(1) %></h1>
        <div class="form">
            <form action="/locations/<%= location._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" name="comment[text]" type="text" placeholder="Comment">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a class="go-back" href="/locations">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>